{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "importsNotUsedAsValues": "preserve",
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "../../dist/public",
    "paths": {
      "*": ["src/*"],
      "src/api/*": ["src/api/*"],
      "src/app/*": ["src/app/*"],
      "src/constants/*": ["src/constants/*"],
      "src/context/*": ["src/context/*"],
      "src/env/*": ["src/env/*"],
      "src/errors/*": ["src/errors/*"],
      "src/hooks/*": ["src/hooks/*"],
      "src/router/*": ["src/router/*"],
      "src/modules/*": ["src/modules/*"],
      "src/__mocks__/*": ["src/__mocks__/*"],
      "src/__tests__/*": ["src/__tests__/*"],
      "src/theme/*": ["src/theme/*"],
      "src/transformers/*": ["src/transformers/*"],
      "src/ui/*": ["src/ui/*"],
      "src/utils/*": ["src/utils/*"]
    },
    "plugins": [
      {
        "displayName": true,
        "minify": true,
        "namespace": "game-monitor",
        "pure": true,
        "transform": "typescript-plugin-styled-components",
        "type": "config"
      }
    ],
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "ES6",
    "typeRoots": ["./src/@types", "./node_modules/@types", ".storybook/**/*.ts"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
